@model NosiYa.Web.ViewModels.Order.OrderDetailsViewModel

@{
	ViewBag.Title = "Детайли поръчка:";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">

	<div class="col-md-4">
		<div class="card mb-3">
			<img class="card-img-top" src="@Model.SetImage" alt="Outfit Image">
			<div class="card-body text-center">

				<h4>@Model.Name</h4>
				<br />
				<p class="">Наем от: @Model.FromDate</p>
				<p class="">Наем до: @Model.ToDate</p>
				<p class="">Наемател: @Model.Username</p>
				<p class="">Email: @Model.Email</p>
				<p class="">Телефон: @Model.Phone</p>

				@if (Model.IsApproved)
				{
					<p class="text-success">Резервацията е одобрена</p>
				}
				else
				{
					<p class="text-warning">Резервацията изчаква одобрение!</p>
					<a asp-controller="Order" asp-action="Approve" asp-route-orderId="@Model.OrderId" class="btn btn-success">Потвърди</a>
				}

				<a asp-controller="Order" asp-action="Delete" asp-route-orderId="@Model.OrderId" class="btn btn-warning">Откажи</a>

			</div>
		</div>
	</div>

</div>

<script src="~/js/alert-confirm.js"></script>