@{
	ViewData["Title"] = "Администрация";
}
<div class="mt-4 p-5 bg-light text-center">
	<h2 class="display-4">Hello, Admin!</h2>
	<p class="lead mb-1 mt-3">
		This is your administrator area - you can <b>read</b>, <b>create</b>,
		<b>delete</b> and <b>edit</b> os.
	</p>
	<p class="lead mt-1">
		You can also see <b>all users and agents</b> and <b>all rents</b> in the
		system.
	</p>
	<hr class="my-4">
	<a asp-area="" asp-controller="OutfitSet" asp-action="All"
	   class="btn btn-primary btn-lg mb-3">Каталог</a>
	<a asp-area="" asp-controller="OutfitSet" asp-action="Create"
	class="btn btn-primary btn-lg mb-3">Добави носия</a>
	<a asp-area="" asp-controller="Event" asp-action="Add"
	class="btn btn-primary btn-lg mb-3">Добави събитие</a>
	<a asp-area="" asp-controller="Region" asp-action="Add"
	class="btn btn-primary btn-lg mb-3">Добави регион</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="" asp-action="Mine"
	class="btn btn-primary btn-lg mb-3">Чакащи заявки</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="Order" asp-action="All"
	   class="btn btn-primary btn-lg mb-3">Резервации</a>
	<span> | </span>
	<a asp-area="Admin" asp-controller="User" asp-action="All"
	class="btn btn-primary btn-lg mb-3">Потребители</a>
</div>