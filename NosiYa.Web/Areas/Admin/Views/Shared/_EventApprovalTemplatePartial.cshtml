@model IEnumerable<EventApprovalViewModel>

<table class="table">
	<thead>
		<tr>
			<th>Събитие</th>
			<th>Начало</th>
			<th>Край</th>
			<th>Потребител</th>
			<th>Опции</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var element in Model)
		{
			<tr>
				<td><a asp-area="Admin" asp-controller="Event" asp-action="Details" asp-route-id="@element.EventId">@element.EventName</a></td>
				<td>@element.EventStart</td>
				<td>@element.EventEnd</td>
				<td>
					<a asp-area="Admin"
					   asp-controller="User"
					   asp-action="All"
					   asp-all-route-data='new Dictionary<string, string>{
							{ "SearchTerm", element.UserName }
						}
						'>@element.UserName</a>
				</td>
				<td>
					<form asp-area="Admin" asp-action="Approve" asp-controller="Event" method="post" class="d-inline">
						<input type="hidden" name="elementId" value="@element.EventId" />
						<button type="submit" class="btn btn-success">Потвърди</button>
					</form>
					<form asp-area="" asp-action="Delete" asp-controller="Event" method="post" class="d-inline">
						<input type="hidden" name="elementId" value="@element.EventId" />
						<button type="submit" class="btn btn-danger">Изтрии</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>