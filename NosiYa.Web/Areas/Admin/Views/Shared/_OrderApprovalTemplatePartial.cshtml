@model IEnumerable<OrderApprovalViewModel>

<table class="table">
	<thead>
		<tr>
			<th>Element Name</th>
			<th>User ID</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var element in Model)
		{
			<tr>
				<td><a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@element.ElementId">@element.Element</a></td>
				<td>
					<a asp-area="Admin"
					   asp-controller="User"
					   asp-action="All"
					   asp-all-route-data='new Dictionary<string, string>{
							{ "SearchTerm", element.UserName }
						}
						'>@element.UserName</a>
				</td>
				<td>
					<form asp-area="Admin" asp-action="Approve" asp-controller="Order" method="post" class="d-inline">
						<input type="hidden" name="elementId" value="@element.ElementId" />
						<button type="submit" class="btn btn-success">Потвърди</button>
					</form>
					<form asp-area="" asp-action="Delete" asp-controller="Order" method="post" class="d-inline">
						<input type="hidden" name="elementId" value="@element.ElementId" />
						<button type="submit" class="btn btn-danger">Изтрии</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>