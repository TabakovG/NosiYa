@model OutfitSetAllViewModel

<div class="col-md-6 col-lg-4">
	<div class="card mb-3">
		<img class="card-img-top" src="@Model.ImageUrl" alt="Outfit Image" style="height: 50vh; object-fit: cover;">
		<div class="card-body text-center">
			<h4>@Model.Name</h4>
			<br />
			<a asp-controller="OutfitSet" asp-action="Details" asp-route-id="@Model.Id"
				class="btn btn-success">Детайли</a>
			@if (this.User.IsInRole(AdminRoleName))
			{
				<a asp-area="Admin" asp-controller="OutfitSet" asp-action="Edit" asp-route-id="@Model.Id"
					class="btn btn-warning">Промени</a>
				<a asp-area="Admin" asp-controller="OutfitSet" asp-action="Delete" asp-route-id="@Model.Id"
					class="btn btn-danger">Изтрий</a>
				<a asp-area="Admin" asp-controller="OutfitSet" asp-action="Activate" asp-route-id="@Model.Id"
					class="btn btn-success">Активирай</a>
				<p></p>
			}
			<a asp-area="" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id"
				class="btn btn-success">Резервирай</a>
		</div>
	</div>
</div>

