@model OutfitPartViewModel

<div class="card col-md-4 col-lg-3 col-xl-2 mx-1">
	<a asp-controller="OutfitPart" asp-action="Details" asp-route-id="@Model.Id">
		<img class="card-img-top" src="@Model.imageUrl" alt="OutfitPart Image" style="height: 30vh; object-fit: cover;">
	</a>
	<div class="card-body">
		<h5 class="card-title"><u>@Model.Name</u></h5>
		<div class="row mt-2">
			@if (User.IsInRole(AdminRoleName))
			{
				<a class="btn btn-warning" asp-area="Admin" asp-controller="OutfitPart"
				   asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
				<a class="btn btn-danger ml-2" asp-area="Admin" asp-controller="OutfitPart"
				   asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
			}
		</div>
	</div>
</div>
