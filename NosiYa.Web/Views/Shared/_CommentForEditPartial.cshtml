@model CommentForEditFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post" asp-area="" asp-action="Edit" asp-controller="Comment">

			<input asp-for="EventId" class="form-control visually-hidden" placeholder="EventId...">

			<div class="form-group">
				<label asp-for="ModifiedContent"></label>
				<textarea asp-for="ModifiedContent" rows="4" class="form-control" placeholder="Description..."></textarea>
				<span asp-validation-for="ModifiedContent" class="small text-danger"></span>
			</div>

			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Запази" />
			</div>
		</form>
	</div>
</div>