@model ICollection<ImageViewModel>

	<div class="row">
		@foreach (var image in Model)
		{
			<!-- Gallery -->
			<div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
				<img src="@image.ImageUrl"
				     class="w-100 shadow-1-strong rounded mb-2"
				     style="object-fit: cover; height: 25vh"/>
				<div class="row d-flex justify-content-between mb-4">
					<form class="col-5" method="post" asp-area="" asp-action="Delete" asp-controller="Image" asp-route-id="@image.Id">
						<input class="visually-hidden disabled" name="returnUrl" value="@Context.Request.GetDisplayUrl()" />
						<input type="submit" value="Изтрии" class="btn btn-danger col-12" />
					</form>
					<form class="col-5" method="post" asp-area="" asp-action="MakeDefaultById" asp-controller="Image" asp-route-id="@image.Id">
						<input class="visually-hidden disabled" name="area" value="@ViewContext.RouteData.Values["area"]?.ToString()?.ToLower()" />
						<input class="visually-hidden disabled" name="entityType" value="@ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower()" />
						<input class="visually-hidden disabled" name="entityId" value="@ViewContext.RouteData.Values["id"]" />
						<input type="submit" value="Заглавна" class="btn btn-warning col-12" />
					</form>
				</div>
			</div>
		}
	</div>

