@model CommentViewModel

<div class="row" id="comment-@Model.Id">
	<div class="card col-8 border-0">
		<p style="font-size:25px;">@Model.OwnerEmail</p>
	</div>
	<div class="card col-8 border-0">
		<p style="font-size:25px;">Waiting for review: @Model.IsWaitingForReview.ToString() </p>
	</div>
	<div class="card col-8 border-0">
		<p style="font-size:25px;">@Model.CreatedOn</p>
	</div>
	<div class="card col-8 border-0">
		<p style="font-size:25px;" class="comment-content" id="comment-content-@Model.Id">@Model.Content</p>
	</div>
	<div class="form-inline">
		@if (this.User.Identity?.IsAuthenticated ?? false)
		{
			
			@if (this.User.IsAdmin() && @Model.IsWaitingForReview)
			{
				<div class="card col-8 border-0">
					<p style="font-size:25px;">Преди да потвърдите моля проверете за актуалното съдържание през бутон "Промени"</p>
				</div>

				<form method="post" asp-area="Admin" asp-action="Approve" asp-controller="Comment" class="delete-item-form">
					<input type="hidden" name="elementId" value="@Model.Id" />
					<input type="submit" value="Потвърди" class="btn btn-success btn-approve-@Model.Id" />
				</form>
			}
			@if (this.User.IsAdmin() || this.User.GetId() == Model.OwnerId)
			{
				@* Display Edit Comment link --AJAX -- *@
				<a href="#" class="btn btn-warning edit-comment-link" data-comment-id="@Model.Id">Промени</a>

				<form method="post" asp-area="" asp-action="Delete" asp-controller="Comment" asp-route-eventId="@ViewContext.RouteData.Values["id"]" asp-route-id="@Model.Id" class="delete-item-form">
					<input type="submit" value="Изтрии" class="btn btn-danger btn-delete" />
				</form>
			}
		}
	</div>
</div>
