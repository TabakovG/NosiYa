@model ICollection<ReservedItemsViewModel>

@{
	ViewBag.Title = "Моите носии";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
	<h2 class="text-center">Към момента нямате потвърдени резервации!</h2>
}

<div class="row">
	@foreach (ReservedItemsViewModel order in Model)
	{
		<div class="col-md-4">
			<div class="card mb-3">
				<img class="card-img-top" src="@order.SetImage" alt="Outfit Image">
				<div class="card-body text-center">

					<h4>@order.Name</h4>
					<br />
					<p class="">@order.FromDate</p>
					<p class="">@order.ToDate</p>
					@if (order.IsApproved)
					{
						<p class="">Резервацията е одобрена</p>
					}
					else
					{
						<p class="">Резервацията изчаква одобрение!</p>

					}

					@if (this.User.Identity?.IsAuthenticated ?? false)
					{
						<a asp-controller="Cart" asp-action="Cancell" asp-route-id="@order" class="btn btn-warning">Откажи</a> //TODO implement
					}
				</div>
			</div>
		</div>
	}
</div>

<script src="~/js/alert-confirm.js"></script>